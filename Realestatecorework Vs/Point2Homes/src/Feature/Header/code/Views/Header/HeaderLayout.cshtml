@using Point2Homes.Feature.Header
@using Point2Homes.Feature.Header.Models
@using Sitecore.Data.Items
@using Sitecore.Data.Fields
@using Sitecore.Mvc.Presentation;
@using Sitecore.Web.UI.WebControls
@model Sitecore.Data.Items.Item

<!DOCTYPE html>

<!--[if IE 9]><html lang="en" class="ie9 no-js"><![endif]-->
<!--[if !IE]><!-->
<html lang="@Sitecore.Context.Language.CultureInfo.TwoLetterISOLanguageName">
<!--<![endif]-->
<body>
    <header>
        <div class="header">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">@Html.Sitecore().Field(Templates.Header.Fields.LogoText.ToString(), Model)</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span claass="navbar-toggler-icon">@Html.Sitecore().Field(Templates.Header.Fields.LogoLink.ToString(), Model)</span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item active">
                            <a class="nav-link" href="index.html">@Html.Sitecore().Field(Templates.Header.Fields.HomeMenu.ToString(), Model) <span class="sr-only"></span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="about.html">@Html.Sitecore().Field(Templates.Header.Fields.AboutMenu.ToString(), Model)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="services.html">@Html.Sitecore().Field(Templates.Header.Fields.ServicesMenu.ToString(), Model)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="properties.html">@Html.Sitecore().Field(Templates.Header.Fields.PropertiesMenu.ToString(), Model)</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @Html.Sitecore().Field(Templates.Header.Fields.Pages.ToString(), Model)
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @{
                                    var subMenu = ViewBag.subMenu;



                                    foreach (var list in subMenu)
                                    {

                                        Sitecore.Data.Fields.LinkField subMenuItem = @list.Fields[Templates.PagesMenu.Fields.SubPageLink.ToString()];

                                        var url = subMenuItem.GetFriendlyUrl();
                                        <a class="dropdown-item" href="@url">
                                            @Html.Sitecore().Field(Templates.PagesMenu.Fields.SubPageName.ToString(), list)
                                        </a>

                                        }
                                    }
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="contact.html">@Html.Sitecore().Field(Templates.Header.Fields.ContactMenu.ToString(), Model)</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="@Html.Sitecore().Field(Templates.Header.Fields.WatermarkText.ToString(), Model)" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">@Html.Sitecore().Field(Templates.Header.Fields.SearchButtonText.ToString(), Model)</button>
                    </form>
                </div>
            </nav>
        </div>
    </header> 
</body>
</html>